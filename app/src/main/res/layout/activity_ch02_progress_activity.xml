<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="example.adam.pri.crazyandroid.ch02_textview01_activity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ch02_progress_start_bt"
        android:text="start"/>

    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ch02_progress_pb"
        android:max="100"
        android:layout_marginTop="10px"
        style="@android:style/Widget.ProgressBar.Horizontal"/>

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ch02_progress_sb"
        android:max="255"
        android:progress="255"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/p1"
        android:id="@+id/ch02_progress_iv"/>

    <RatingBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:max="5"
        android:stepSize="0.5"
        android:progress="5"
        android:id="@+id/ch02_progress_rb"/>
</LinearLayout>
