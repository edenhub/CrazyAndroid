<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="example.adam.pri.crazyandroid.ch02_textview01_activity"
    android:scrollbars="vertical">

    <EditText
        android:id="@+id/ch02_alertdialog1_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ch02_alertdialog_tv"
        android:text="test view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/ch02_alertdialog1_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示对话框"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/ch02_alertdialog2_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示列表对话框"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/ch02_alertdialog3_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示single对话框"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/ch02_alertdialog4_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示multi对话框"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/ch02_alertdialog5_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示view对话框"
        android:layout_gravity="center"/>

</LinearLayout>
