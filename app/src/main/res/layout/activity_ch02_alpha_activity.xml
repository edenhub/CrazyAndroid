<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="example.adam.pri.crazyandroid.ch02_textview01_activity"
    android:scrollbars="vertical">

    <LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minus"
            android:id="@+id/ch02_alpha_minus_bt"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="plus"
            android:id="@+id/ch02_alpha_plus_bt"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:id="@+id/ch02_alpha_next_bt"/>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="250px"
        android:id="@+id/ch02_alpha_iv_origin"
        android:src="@drawable/p1"
        android:background="#000000"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/ch02_alpha_iv_detail"
        android:background="#000000"
        android:layout_marginTop="10px"/>

</TableLayout>
